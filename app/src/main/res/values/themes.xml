<resources>
    <!-- Base application theme. -->
    <style name="Theme.StarWarsUniverse" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/text_light</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/bg</item>
        <!-- Customize your theme here. -->
        <item name="text">@color/text_light</item>
        <item name="bg">@color/bg_light</item>
        <item name="accent">@color/bg_accent_light</item>
        <item name="bg_element_1">@color/bg_grey_1_light</item>
        <item name="bg_element_2">@color/bg_grey_2_light</item>
        <item name="bg_element_3">@color/bg_grey_3_light</item>
        <item name="text_accent">@color/text_accent_light</item>
    </style>
</resources>